{
  "name": "prisma-backend",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "test": "jest",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server"
  },
  "dependencies": {
    "@nexus/schema": "0.15.0",
    "axios": "^0.19.0",
    "bcryptjs": "2.4.3",
    "graphql-middleware": "4.0.1",
    "graphql-shield": "7.3.6",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "nanoid": "^3.1.12",
    "nexus-plugin-prisma": "0.18.2",
    "pg": "^8.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/jest": "^26.0.13",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "12.12.58",
    "@types/ws": "7.2.6",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0-pre.50",
    "typescript": "4.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "./tests/nexus-test-environment.js"
  }
}
